        "creator": {
            "type": "string",
            "description": "Workflow's creator name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "markdownDescription": "Workflow's creator name",
            "defaultSnippets": [
                {
                    "label": "Workflow's creator name",
                    "body": ""
