{
    "title": "Arvis workflow json schema configuration",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "creator",
        "commands"
    ],
    "definitions": {
        "type": {
            "type": "string",
            "description": "Action's type",
            "markdownDescription": "Action's type",
            "enum": [
                "args",
                "clipboard",
                "cond",
                "hotkey",
                "keyword",
                "notification",
                "open",
                "script",
                "scriptFilter",
                "resetInput"
            ]
        },
        "command": {
            "type": "object",
            "required": [
                "type"
            ],
            "defaultSnippets": [
                {
                    "label": "Hotkey",
                    "body": {
                        "type": "hotkey",
                        "hotkey": "",
                        "actions": []
                    }
                },
                {
                    "label": "Keyword",
                    "body": {
                        "type": "keyword",
                        "command": "",
                        "title": "",
                        "subtitle": "",
                        "script": "",
                        "actions": []
                    }
                },
                {
                    "label": "Scriptfilter",
                    "body": {
                        "type": "scriptFilter",
                        "command": "",
                        "title": "",
                        "subtitle": "",
                        "scriptFilter": "",
                        "runningSubtext": "",
                        "withspace": true,
                        "actions": []
                    }
                },
                {
                    "label": "Conditional",
                    "body": {
                        "type": "cond",
                        "modifiers": "normal",
                        "if": {
                            "cond": "",
                            "then": [],
                            "else": []
                        }
                    }
                },
                {
                    "label": "Argument",
                    "body": {
                        "type": "args",
                        "modifiers": "normal",
                        "arg": "{query}",
                        "actions": []
                    }
                },
                {
                    "label": "Script",
                    "body": {
                        "type": "script",
                        "modifiers": "normal",
                        "script": ""
                    }
                },
                {
                    "label": "Open",
                    "body": {
                        "type": "open",
                        "modifiers": "normal",
                        "target": "{query}"
                    }
                },
                {
                    "label": "Notification",
                    "body": {
                        "type": "notification",
                        "modifiers": "normal",
                        "title": "",
                        "text": ""
                    }
                },
                {
                    "label": "Clipboard",
                    "body": {
                        "type": "clipboard",
                        "modifiers": "normal",
                        "text": "{query}"
                    }
                }
            ],
            "properties": {
                "type": {
                    "$ref": "#/definitions/type",
                    "description": "Action's type",
                    "markdownDescription": "Action's type"
                },
                "command": {
                    "type": "string",
                    "description": "[keyword, scriptFilter] Command to search for and execute commands.",
                    "markdownDescription": "[keyword, scriptFilter] Command to search for and execute commands."
                },
                "title": {
                    "type": "string",
                    "description": "[keyword, scriptFilter] Description of the command to display in the search window.",
                    "markdownDescription": "[keyword, scriptFilter] Description of the command to display in the search window."
                },
                "subtitle": {
                    "type": "string",
                    "description": "[keyword, scriptFilter] A additional description of the command to display in the search window.",
                    "markdownDescription": "[keyword, scriptFilter] A additional description of the command to display in the search window."
                },
                "withspace": {
                    "type": "boolean",
                    "description": "[scriptFilter] Indicates if space is required after the command to execute it",
                    "markdownDescription": "[scriptFilter] Indicates if space is required after the command to execute it"
                },
                "runningSubtext": {
                    "type": "string",
                    "description": "[scriptFilter] Statement to display while scriptFilter is running.",
                    "markdownDescription": "[scriptFilter] Statement to display while scriptFilter is running."
                },
                "scriptFilter": {
                    "type": "string",
                    "description": "[scriptFilter] Scriptfilter to execute",
                    "markdownDescription": "[scriptFilter] Scriptfilter to execute"
                },
                "script": {
                    "type": "string",
                    "description": "[script] Script to execute",
                    "markdownDescription": "[script] Script to execute"
                },
                "text": {
                    "type": "string",
                    "description": "",
                    "markdownDescription": ""
                },
                "if": {
                    "type": "object",
                    "description": "[cond] Divides the flow of execution by conditions",
                    "markdownDescription": "[cond] Divides the flow of execution by conditions"
                },
                "cond": {
                    "type": "string",
                    "description": "[cond] Conditions",
                    "markdownDescription": "[cond] Conditions"
                },
                "then": {
                    "type": "array",
                    "description": "[cond] If 'cond' is true execute these actions",
                    "markdownDescription": "[cond] If 'cond' is true execute these actions",
                    "items": {
                        "$ref": "#/definitions/command"
                    }
                },
                "else": {
                    "type": "array",
                    "description": "[cond] If 'cond' is false execute these actions",
                    "markdownDescription": "[cond] If 'cond' is false execute these actions",
                    "items": {
                        "$ref": "#/definitions/command"
                    }
                },
                "arg": {
                    "type": "string",
                    "description": "[arg] Select argument",
                    "markdownDescription": "[arg] Select argument",
                    "defaultSnippets": [
                        {
                            "label": "[arg] Select argument",
                            "body": "${query}"
                        }
                    ]
                },
                "target": {
                    "type": "string",
                    "description": "[open] target to open (url, file path)",
                    "markdownDescription": "[open] target to open (url, file path)"
                },
                "modifiers": {
                    "type": "string",
                    "enum": [
                        "normal",
                        "cmd",
                        "alt",
                        "ctrl",
                        "win",
                        "opt",
                        "option",
                        "meta",
                        "shift",
                        "fn"
                    ],
                    "description": "Specific modifier key must be pressed to run",
                    "markdownDescription": "Specific modifier key must be pressed to run"
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/command"
                    }
                }
            }
        }
    },
    "properties": {
