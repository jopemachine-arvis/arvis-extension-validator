{
    "title": "Arvis plugin json schema configuration",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "creator",
        "actions"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "creator": {
            "type": "string",
            "description": "Plugin's creator name",
            "markdownDescription": "Plugin's creator name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "defaultSnippets": [
                {
                    "label": "Plugin's creator name",
                    "body": ""
                }
            ]
        },
        "defaultIcon": {
            "type": "string",
            "description": "Plugin's default icon",
            "markdownDescription": "Plugin's default icon",
            "defaultSnippets": [
                {
                    "label": "Plugin's default icon",
                    "body": "icon.png"
                }
            ]
        },
        "description": {
            "type": "string",
            "description": "Plugin's description",
            "markdownDescription": "Plugin's description",
            "defaultSnippets": [
                {
                    "label": "Plugin's description",
                    "body": ""
                }
            ]
        },
        "name": {
            "type": "string",
            "description": "Plugin's name",
            "markdownDescription": "Plugin's name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "defaultSnippets": [
                {
                    "label": "Plugin's name",
                    "body": ""
                }
            ]
        },
        "readme": {
            "type": "string",
            "description": "Plugin's readme url",
            "markdownDescription": "Plugin's readme url",
            "defaultSnippets": [
                {
                    "label": "Plugin's readme url",
                    "body": ""
                }
            ]
        },
        "category": {
            "type": "string",
            "description": "Plugin's category",
            "markdownDescription": "Plugin's category",
            "defaultSnippets": [
                {
                    "label": "Plugin's category",
                    "body": ""
                }
            ]
        },
        "version": {
            "type": "string",
            "description": "Plugin's version",
            "markdownDescription": "Plugin's version",
            "defaultSnippets": [
                {
                    "label": "Plugin's version",
                    "body": "0.0.1"
                }
            ]
        },
        "latest": {
            "type": "string",
            "description": "Plugin's latest version",
            "markdownDescription": "Plugin's latest version. Mark this value from your script when update is needed",
            "defaultSnippets": [
                {
                    "label": "Plugin's latest version",
                    "body": ""
                }
            ]
        },
        "webAddress": {
            "type": "string",
            "description": "Plugin's webaddress url",
            "markdownDescription": "Plugin's webaddress url",
            "defaultSnippets": [
                {
                    "label": "Plugin's webaddress url",
                    "body": ""
                }
            ]
        },
        "enabled": {
            "type": "boolean",
            "description": "'Enabled' Status",
            "markdownDescription": "'Enabled' Status",
            "defaultSnippets": [
                {
                    "label": "'Enabled' Status",
                    "body": true
                }
            ]
        },
        "main": {
            "type": "string",
            "description": "Entry file to import",
            "markdownDescription": "Entry file to import",
            "defaultSnippets": [
                {
                    "label": "Entry file to import",
                    "body": true
                }
            ]
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "./definitions.json#/definitions/command"
            }
        },
        "platform": {
            "type": "array",
            "description": "Target platforms",
            "markdownDescription": "Target platforms"
        },
        "variables": {
            "type": "object",
            "description": "Set the variables to use in the extension",
            "markdownDescription": "Set the variables to use in the extension"
        }
    }
}