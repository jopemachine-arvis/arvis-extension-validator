{
	"name": "arvis-extension-validator",
	"version": "0.2.1",
	"description": "Extension validator for Arvis",
	"license": "MIT",
	"repository": "jopemachine/arvis-extension-validator",
	"author": {
		"name": "jopemachine",
		"email": "jopemachine@gmail.com"
	},
	"main": "dist/index.js",
	"bin": {
		"arvis-validate": "dist/cli.js"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"test": "ava",
		"schema-build": "node schema-build",
		"lint": "eslint --fix *.ts",
		"build": "tsc"
	},
	"files": [
		"dist/**",
		"package.json",
		"readme.md",
		"schema/**",
		"license"
	],
	"keywords": [
		"arvis",
		"jsonschema",
		"json-validator",
		"arvis-extension",
		"arvis-workflow",
		"arvis-plugin"
	],
	"dependencies": {
		"chalk": "^4.1.1",
		"fs-extra": "^10.0.0",
		"is-url": "^1.2.4",
		"jsonschema": "^1.4.0",
		"meow": "^5.0.0"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.11",
		"@types/is-url": "^1.2.29",
		"@types/meow": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"ava": "^2.1.0",
		"eslint": "^7.30.0",
		"execa": "^2.0.0",
		"husky": "^4.2.5",
		"typescript": "^4.3.2",
		"xo": "^0.24.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test"
		}
	}
}
