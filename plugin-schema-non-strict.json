{
    "title": "Arvis plugin json schema configuration",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "name",
        "creator",
        "actions"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "creator": {
            "type": "string",
            "description": "Plugin's creator name. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#creator",
            "markdownDescription": "Plugin's creator name. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#creator",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "defaultSnippets": [
                {
                    "label": "Plugin's creator name",
                    "body": ""
                }
            ]
        },
        "defaultIcon": {
            "type": "string",
            "description": "Plugin's default icon. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#defaultIcon",
            "markdownDescription": "Plugin's default icon. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#defaultIcon",
            "defaultSnippets": [
                {
                    "label": "Plugin's default icon",
                    "body": "icon.png"
                }
            ]
        },
        "description": {
            "type": "string",
            "description": "Plugin's description. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#description",
            "markdownDescription": "Plugin's description. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#description",
            "defaultSnippets": [
                {
                    "label": "Plugin's description",
                    "body": ""
                }
            ]
        },
        "name": {
            "type": "string",
            "description": "Plugin's name. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#name",
            "markdownDescription": "Plugin's name. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "defaultSnippets": [
                {
                    "label": "Plugin's name",
                    "body": ""
                }
            ]
        },
        "readme": {
            "type": "string",
            "description": "Plugin's README url. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#readme",
            "markdownDescription": "Plugin's README url. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#readme",
            "defaultSnippets": [
                {
                    "label": "Plugin's README url",
                    "body": ""
                }
            ]
        },
        "category": {
            "type": "string",
            "description": "Plugin's category. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#category",
            "markdownDescription": "Plugin's category. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#category",
            "defaultSnippets": [
                {
                    "label": "Plugin's category",
                    "body": ""
                }
            ]
        },
        "version": {
            "type": "string",
            "description": "Plugin's version. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#version",
            "markdownDescription": "Plugin's version. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#version",
            "defaultSnippets": [
                {
                    "label": "Plugin's version",
                    "body": "0.0.1"
                }
            ]
        },
        "latest": {
            "type": "string",
            "description": "Plugin's latest version. Mark this value from your script when update is needed. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#latest",
            "markdownDescription": "Plugin's latest version. Mark this value from your script when update is needed. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#latest",
            "defaultSnippets": [
                {
                    "label": "Plugin's latest version",
                    "body": ""
                }
            ]
        },
        "webAddress": {
            "type": "string",
            "description": "Plugin's webaddress url. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#webAddress",
            "markdownDescription": "Plugin's webaddress url. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#webAddress",
            "defaultSnippets": [
                {
                    "label": "Plugin's webaddress url",
                    "body": ""
                }
            ]
        },
        "enabled": {
            "type": "boolean",
            "description": "'Enabled' Status. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#enabled",
            "markdownDescription": "'Enabled' Status. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#enabled",
            "defaultSnippets": [
                {
                    "label": "'Enabled' Status",
                    "body": true
                }
            ]
        },
        "main": {
            "type": "string",
            "description": "Entry file to import. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#main",
            "markdownDescription": "Entry file to import. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#main",
            "defaultSnippets": [
                {
                    "label": "Entry file to import",
                    "body": true
                }
            ]
        },
        "actions": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/schema/definitions.json#/definitions/command"
            },
            "description": "Plugin's actions. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#actions",
            "markdownDescription": "Plugin's actions. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#actions"
        },
        "platform": {
            "type": "array",
            "description": "Target platforms. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#platform",
            "markdownDescription": "Target platforms. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#platform"
        },
        "variables": {
            "type": "object",
            "description": "Set the variables to use in the extension. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#variables",
            "markdownDescription": "Set the variables to use in the extension. Ref: https://github.com/jopemachine/arvis/blob/master/documents/plugin-config-format.md#variables"
        }
    }
}
