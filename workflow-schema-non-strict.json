{
    "title": "Arvis workflow json schema configuration",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "name",
        "creator",
        "commands"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "creator": {
            "type": "string",
            "description": "Workflow's creator name. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#creator",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "markdownDescription": "Workflow's creator name. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#creator",
            "defaultSnippets": [
                {
                    "label": "Workflow's creator name",
                    "body": ""
                }
            ]
        },
        "defaultIcon": {
            "type": "string",
            "description": "Workflow's default icon. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#defaultIcon",
            "markdownDescription": "Workflow's default icon. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#defaultIcon",
            "defaultSnippets": [
                {
                    "label": "Workflow's default icon",
                    "body": "icon.png"
                }
            ]
        },
        "description": {
            "type": "string",
            "description": "Workflow's description. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#description",
            "markdownDescription": "Workflow's description. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#description",
            "defaultSnippets": [
                {
                    "label": "Workflow's description",
                    "body": ""
                }
            ]
        },
        "name": {
            "type": "string",
            "description": "Workflow's name. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "markdownDescription": "Workflow's name. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#name",
            "defaultSnippets": [
                {
                    "label": "Workflow's name",
                    "body": ""
                }
            ]
        },
        "readme": {
            "type": "string",
            "description": "Workflow's README text. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#readme",
            "markdownDescription": "Workflow's README text. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#readme",
            "defaultSnippets": [
                {
                    "label": "Workflow's README text",
                    "body": ""
                }
            ]
        },
        "category": {
            "type": "string",
            "description": "Workflow's category. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#category",
            "markdownDescription": "Workflow's category. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#category",
            "defaultSnippets": [
                {
                    "label": "Workflow's category",
                    "body": ""
                }
            ]
        },
        "version": {
            "type": "string",
            "description": "Workflow's version. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#version",
            "markdownDescription": "Workflow's version. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#version",
            "defaultSnippets": [
                {
                    "label": "Workflow's version",
                    "body": "0.0.1"
                }
            ]
        },
        "latest": {
            "type": "string",
            "description": "Workflow's latest version. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#latest",
            "markdownDescription": "Workflow's latest version. Mark this value from your script when update is needed. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#latest",
            "defaultSnippets": [
                {
                    "label": "Workflow's latest version",
                    "body": ""
                }
            ]
        },
        "webAddress": {
            "type": "string",
            "description": "Workflow's webaddress text. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#webAddress",
            "markdownDescription": "Workflow's webaddress text. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#webAddress",
            "defaultSnippets": [
                {
                    "label": "Workflow's webaddress text",
                    "body": ""
                }
            ]
        },
        "enabled": {
            "type": "boolean",
            "description": "'Enabled' Status. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#enabled",
            "markdownDescription": "'Enabled' Status. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#enabled",
            "defaultSnippets": [
                {
                    "label": "'Enabled' Status",
                    "body": true
                }
            ]
        },
        "platform": {
            "type": "array",
            "description": "Target platforms. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#platform",
            "markdownDescription": "Target platforms. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#platform"
        },
        "variables": {
            "type": "object",
            "description": "Set the variables to use in the extension. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#variables",
            "markdownDescription": "Set the variables to use in the extension. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#variables"
        },
        "commands": {
            "type": "array",
            "description": "Workflow's commands. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#commands",
            "markdownDescription": "Workflow's commands. \n\nhttps://jopemachine.github.io/arvis-docs/documents/extension-development/workflow/workflow-config-format/#commands",
            "defaultSnippets": [
                {
                    "label": "ScriptFilter template",
                    "body": [
                        {
                            "type": "scriptFilter",
                            "command": "",
                            "runningSubtext": "Hold on a sec until script work is done...",
                            "argType": "optional",
                            "withspace": true,
                            "actions": []
                        }
                    ]
                },
                {
                    "label": "Keyword template",
                    "body": [
                        {
                            "type": "keyword",
                            "command": "",
                            "text": "",
                            "title": "",
                            "subtitle": "",
                            "argType": "no",
                            "actions": []
                        }
                    ]
                },
                {
                    "label": "Hotkey template",
                    "body": [
                        {
                            "type": "hotkey",
                            "hotkey": "",
                            "actions": []
                        }
                    ]
                }
            ],
            "items": {
                "$ref": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/schema/definitions.json#/definitions/command"
            }
        }
    }
}
