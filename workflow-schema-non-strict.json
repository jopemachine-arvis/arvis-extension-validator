{
    "title": "Arvis workflow json schema configuration",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "name",
        "creator",
        "commands"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "creator": {
            "type": "string",
            "description": "Workflow's creator name. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#creator",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "markdownDescription": "Workflow's creator name. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#creator",
            "defaultSnippets": [
                {
                    "label": "Workflow's creator name",
                    "body": ""
                }
            ]
        },
        "defaultIcon": {
            "type": "string",
            "description": "Workflow's default icon. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#defaultIcon",
            "markdownDescription": "Workflow's default icon. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#defaultIcon",
            "defaultSnippets": [
                {
                    "label": "Workflow's default icon",
                    "body": "icon.png"
                }
            ]
        },
        "description": {
            "type": "string",
            "description": "Workflow's description. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#description",
            "markdownDescription": "Workflow's description. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#description",
            "defaultSnippets": [
                {
                    "label": "Workflow's description",
                    "body": ""
                }
            ]
        },
        "name": {
            "type": "string",
            "description": "Workflow's name. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#name",
            "pattern": "^[a-zA-Z]+[a-zA-Z0-9_\\- ]*$",
            "markdownDescription": "Workflow's name. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#name",
            "defaultSnippets": [
                {
                    "label": "Workflow's name",
                    "body": ""
                }
            ]
        },
        "readme": {
            "type": "string",
            "description": "Workflow's README url. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#readme",
            "markdownDescription": "Workflow's README url. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#readme",
            "defaultSnippets": [
                {
                    "label": "Workflow's README url",
                    "body": ""
                }
            ]
        },
        "category": {
            "type": "string",
            "description": "Workflow's category. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#category",
            "markdownDescription": "Workflow's category. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#category",
            "defaultSnippets": [
                {
                    "label": "Workflow's category",
                    "body": ""
                }
            ]
        },
        "version": {
            "type": "string",
            "description": "Workflow's version. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#version",
            "markdownDescription": "Workflow's version. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#version",
            "defaultSnippets": [
                {
                    "label": "Workflow's version",
                    "body": "0.0.1"
                }
            ]
        },
        "latest": {
            "type": "string",
            "description": "Workflow's latest version. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#latest",
            "markdownDescription": "Workflow's latest version. Mark this value from your script when update is needed. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#latest",
            "defaultSnippets": [
                {
                    "label": "Workflow's latest version",
                    "body": ""
                }
            ]
        },
        "webAddress": {
            "type": "string",
            "description": "Workflow's webaddress url. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#webAddress",
            "markdownDescription": "Workflow's webaddress url. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#webAddress",
            "defaultSnippets": [
                {
                    "label": "Workflow's webaddress url",
                    "body": ""
                }
            ]
        },
        "enabled": {
            "type": "boolean",
            "description": "'Enabled' Status. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#enabled",
            "markdownDescription": "'Enabled' Status. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#enabled",
            "defaultSnippets": [
                {
                    "label": "'Enabled' Status",
                    "body": true
                }
            ]
        },
        "platform": {
            "type": "array",
            "description": "Target platforms. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#platform",
            "markdownDescription": "Target platforms. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#platform"
        },
        "variables": {
            "type": "object",
            "description": "Set the variables to use in the extension. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#variables",
            "markdownDescription": "Set the variables to use in the extension. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#variables"
        },
        "commands": {
            "type": "array",
            "description": "Workflow's commands. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#commands",
            "markdownDescription": "Workflow's commands. \n\nhttps://github.com/jopemachine/arvis/blob/master/documents/workflow-config-format.md#commands",
            "defaultSnippets": [
                {
                    "label": "Script filter action template",
                    "body": [
                        {
                            "type": "scriptFilter",
                            "command": "",
                            "text": "",
                            "title": "",
                            "subtitle": "",
                            "runningSubtext": "",
                            "withspace": true,
                            "actions": []
                        }
                    ]
                },
                {
                    "label": "Keyword action template",
                    "body": [
                        {
                            "type": "keyword",
                            "command": "",
                            "text": "",
                            "title": "",
                            "subtitle": "",
                            "actions": []
                        }
                    ]
                },
                {
                    "label": "Hotkey action template",
                    "body": [
                        {
                            "type": "hotkey",
                            "hotkey": "",
                            "actions": []
                        }
                    ]
                }
            ],
            "items": {
                "$ref": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/schema/definitions.json#/definitions/command"
            }
        }
    }
}
